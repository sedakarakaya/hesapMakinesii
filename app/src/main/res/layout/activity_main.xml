<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/sayiGoster"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:background="#000000"
        android:gravity="end|bottom"
        android:inputType="none"
        android:focusable="false"
        android:padding="20dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="80sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_ac"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#A5A5A5"
                android:onClick="btnSilTik"
                android:text="AC"
                android:textColor="#000000"
                android:textSize="28sp"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/btn_sign"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#A5A5A5"
                android:onClick="btnSayiTik"
                android:text="+/-"
                android:textColor="#000000"
                android:textSize="28sp"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/btn_percent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#A5A5A5"
                android:onClick="btnYÃ¼zdeTik"
                android:text="%"
                android:textColor="#000000"
                android:textSize="28sp"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/btn_divide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#FF9800"
                android:onClick="btnOnTik"
                android:text="/"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                app:cornerRadius="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#333333"
                android:onClick="btnSayiTik"
                android:text="7"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#333333"
                android:onClick="btnSayiTik"
                android:text="8"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#333333"
                android:onClick="btnSayiTik"
                android:text="9"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/btn_multiply"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#FF9800"
                android:onClick="btnOnTik"
                android:text="x"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                app:cornerRadius="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#333333"
                android:onClick="btnSayiTik"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#333333"
                android:onClick="btnSayiTik"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#333333"
                android:onClick="btnSayiTik"
                android:text="6"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/btn_minus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#FF9800"
                android:onClick="btnOnTik"
                android:text="-"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                app:cornerRadius="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#333333"
                android:onClick="btnSayiTik"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#333333"
                android:onClick="btnSayiTik"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#333333"
                android:onClick="btnSayiTik"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#FF9800"
                android:onClick="btnOnTik"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                app:cornerRadius="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_dot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="2"
                android:backgroundTint="#333333"
                android:onClick="btnSayiTik"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/btn_comma"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#333333"
                android:onClick="btnSayiTik"
                android:text="."
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/btn_equals"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:backgroundTint="#FF9800"
                android:onClick="btnEsittirTik"
                android:text="="
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                app:cornerRadius="15dp" />
        </TableRow>

    </TableLayout>

</LinearLayout>